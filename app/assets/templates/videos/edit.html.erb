<form name="editVideo">
  <fieldset>
    <legend>
      Edit Video
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="video[name]"
                   ng-model="video.name"
                   class="text_field"
                   required>
          <span ng-show="editVideo.name.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Status
        </label>
        <div class="controls">
            <input type="text"
                   name="video[status]"
                   ng-model="video.status"
                   class="text_field"
                   required>
          <span ng-show="editVideo.status.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
    <div class="form-actions">
      <button class="btn btn-success" ng-click="save()"
        ng-disabled="isClean() || editVideo.$invalid">
        Save
      </button>
      <button ng-click="destroy()"
              ng-show="video.id"
              class="btn btn-danger">
              <i class="icon-trash"></i>Delete
      </button>
      <a href="/videos" class="btn">
        Back to videos
      </a>
    </div>
  </fieldset>
</form>

